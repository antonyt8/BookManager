# Configurações para produção no Fly.io
# Copie este arquivo para .env.production e configure as variáveis

# Banco de Dados (será configurado automaticamente pelo Fly.io)
# DB_HOST=<configurado_automaticamente>
# DB_PORT=5432
# DB_NAME=<configurado_automaticamente>
# DB_USER=<configurado_automaticamente>
# DB_PASS=<configurado_automaticamente>

# Configurações de sessão
SESSION_SECRET=<configure_via_fly_secrets>
NODE_ENV=production

# E-mail (opcional)
EMAIL_USER=
EMAIL_PASS=

# Google OAuth (opcional)
GOOGLE_CLIENT_ID=<configure_via_fly_secrets>
GOOGLE_CLIENT_SECRET=<configure_via_fly_secrets>

# Configurações JWT
JWT_SECRET=<mesmo_valor_do_session_secret>

# Configurações CORS para produção
CORS_ORIGIN=https://bookmanager.fly.dev
