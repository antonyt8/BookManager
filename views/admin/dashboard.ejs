<%- include('../partials/header') %>
<%- include('../partials/nav') %>
<div class="container fade-in-up">
  <div class="card glass mb-4">
    <div class="card-body">
      <h2><i class="fas fa-tools"></i> Painel Admin</h2>
      <p class="text-muted">Estatísticas globais do sistema</p>
    </div>
  </div>
  <div class="row g-4">
    <div class="col-md-4">
      <div class="card glass text-center">
        <div class="card-body">
          <h5 class="card-title">Usuários</h5>
          <p class="display-4"><%= totalUsuarios %></p>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card glass text-center">
        <div class="card-body">
          <h5 class="card-title">Livros</h5>
          <p class="display-4"><%= totalLivros %></p>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card glass text-center">
        <div class="card-body">
          <h5 class="card-title">Livros por Status</h5>
          <ul class="list-unstyled mb-0">
            <% livrosPorStatus.forEach(function(item) { %>
              <li><strong><%= item.status %>:</strong> <%= item.dataValues.quantidade %></li>
            <% }) %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include('../partials/footer') %> 