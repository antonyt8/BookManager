<%- include('../partials/header') %>
<%- include('../partials/nav') %>
<div class="container fade-in-up">
  <div class="card glass mb-4">
    <div class="card-body">
      <h2><i class="fas fa-book"></i> Todos os Livros</h2>
      <p class="text-muted">Visualize todos os livros cadastrados no sistema</p>
    </div>
  </div>
  <div class="card glass">
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>ID</th>
              <th>Título</th>
              <th>Autor</th>
              <th>Status</th>
              <th>Usuário</th>
              <th>Data</th>
            </tr>
          </thead>
          <tbody>
            <% livros.forEach(function(livro) { %>
              <tr>
                <td><%= livro.id %></td>
                <td><%= livro.titulo %></td>
                <td><%= livro.autor %></td>
                <td><%= livro.status %></td>
                <td><%= livro.user ? livro.user.nome : '-' %></td>
                <td><%= livro.createdAt.toLocaleDateString('pt-BR') %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<%- include('../partials/footer') %> 