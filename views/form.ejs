<%- include('partials/header') %>
<%- include('partials/nav') %>

<h2><%= livro.id ? 'Editar Livro' : 'Adicionar Novo Livro' %></h2>

<form action="<%= acao %>" method="POST">
  <label>Título: <input type="text" name="titulo" value="<%= livro.titulo || '' %>" required></label><br>
  <label>Autor: <input type="text" name="autor" value="<%= livro.autor || '' %>" required></label><br>
  <label>Ano de Publicação: <input type="number" name="ano" value="<%= livro.ano || '' %>" required></label><br>
  <label>Gênero: <input type="text" name="genero" value="<%= livro.genero || '' %>" required></label><br>
  <button type="submit">Salvar</button>
</form>

