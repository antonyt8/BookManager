<%- include('partials/header') %>
<%- include('partials/nav') %>

<div class="container text-center py-5">
  <div class="row">
    <div class="col-md-6 mx-auto">
      <div class="card">
        <div class="card-body">
          <i class="fas fa-bug fa-5x text-danger mb-4"></i>
          <h1 class="display-1 text-muted">500</h1>
          <h2 class="mb-4"><%= titulo || 'Erro interno do servidor' %></h2>
          <p class="lead text-muted mb-4">
            <%= mensagem || 'Ocorreu um erro interno no servidor. Tente novamente mais tarde.' %>
          </p>
          
          <% if (error && error.stack && process.env.NODE_ENV === 'development') { %>
            <div class="alert alert-danger text-start">
              <h6>Detalhes do erro (apenas em desenvolvimento):</h6>
              <pre class="mb-0"><%= error.stack %></pre>
            </div>
          <% } %>
          
          <div class="d-flex gap-2 justify-content-center">
            <a href="/" class="btn btn-primary">
              <i class="fas fa-home"></i> Voltar ao In√≠cio
            </a>
            <a href="/livros" class="btn btn-outline-primary">
              <i class="fas fa-books"></i> Ver Livros
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %> 