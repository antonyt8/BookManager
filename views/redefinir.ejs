<%- include('partials/header') %>
<%- include('partials/nav') %>
<div class="container fade-in-up">
  <div class="card glass mb-4">
    <div class="card-body">
      <h2><i class="fas fa-lock"></i> Redefinir Senha</h2>
      <p class="text-muted">Digite sua nova senha abaixo.</p>
    </div>
  </div>
  <div class="card glass">
    <div class="card-body">
      <form method="POST" action="/usuarios/redefinir/<%= token %>">
        <div class="mb-3">
          <label for="senha" class="form-label"><i class="fas fa-lock"></i> Nova Senha</label>
          <input type="password" class="form-control" id="senha" name="senha" required autofocus>
        </div>
        <button type="submit" class="btn btn-primary w-100">Redefinir Senha</button>
      </form>
      <div class="mt-3 text-center">
        <a href="/usuarios/login">Voltar ao login</a>
      </div>
    </div>
  </div>
</div>
<%- include('partials/footer') %> 