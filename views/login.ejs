<%- include('partials/header') %>
<%- include('partials/nav') %>
<div class="container fade-in-up">
  <div class="card glass mb-4">
    <div class="card-body">
      <h2><i class="fas fa-sign-in-alt"></i> Login</h2>
      <p class="text-muted">Entre com seu e-mail e senha para acessar sua biblioteca.</p>
    </div>
  </div>
  <div class="card glass">
    <div class="card-body">
      <% if (locals.error && error.length > 0) { %>
        <div class="alert alert-danger"><%= error %></div>
      <% } %>
      <% if (locals.success && success.length > 0) { %>
        <div class="alert alert-success"><%= success %></div>
      <% } %>
      <form method="POST" action="/usuarios/login">
        <div class="mb-3">
          <label for="email" class="form-label"><i class="fas fa-envelope"></i> E-mail</label>
          <input type="email" class="form-control" id="email" name="email" required autofocus>
        </div>
        <div class="mb-3">
          <label for="senha" class="form-label"><i class="fas fa-lock"></i> Senha</label>
          <input type="password" class="form-control" id="senha" name="senha" required>
        </div>
        <button type="submit" class="btn btn-primary w-100"><i class="fas fa-sign-in-alt me-2"></i>Entrar</button>
      </form>
      <div class="mt-2 text-center">
        <a href="/usuarios/recuperar">Esqueci a senha?</a>
      </div>
      <div class="mt-3 text-center">
        <a href="/usuarios/auth/google" class="btn btn-danger w-100"><i class="fab fa-google"></i> Entrar com Google</a>
      </div>
      <div class="mt-3 text-center">
        <a href="/usuarios/cadastro">NÃ£o tem conta? Cadastre-se</a>
      </div>
    </div>
  </div>
</div>
<%- include('partials/footer') %> 