<%- include('partials/header') %>
<%- include('partials/nav') %>
<div class="container fade-in-up">
  <div class="card glass mb-4">
    <div class="card-body">
      <h2><i class="fas fa-key"></i> Recuperar Senha</h2>
      <p class="text-muted">Informe seu e-mail para receber um link de redefinição de senha.</p>
    </div>
  </div>
  <div class="card glass">
    <div class="card-body">
      <% if (locals.error && error.length > 0) { %>
        <div class="alert alert-danger"><%= error %></div>
      <% } %>
      <% if (locals.success && success.length > 0) { %>
        <div class="alert alert-success"><%= success %></div>
      <% } %>
      <% if (typeof resetUrl !== 'undefined' && resetUrl) { %>
        <div class="alert alert-info mt-3">Link de redefinição: <a href="<%= resetUrl %>"><%= resetUrl %></a></div>
      <% } %>
      <form method="POST" action="/usuarios/recuperar">
        <div class="mb-3">
          <label for="email" class="form-label"><i class="fas fa-envelope"></i> E-mail</label>
          <input type="email" class="form-control" id="email" name="email" required autofocus>
        </div>
        <button type="submit" class="btn btn-primary w-100"><i class="fas fa-key me-2"></i>Enviar link</button>
      </form>
      <div class="mt-3 text-center">
        <a href="/usuarios/login">Voltar ao login</a>
      </div>
    </div>
  </div>
</div>
<%- include('partials/footer') %> 